rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra global: usu치rios autenticados s칩 podem acessar seus pr칩prios dados
    match /users/{userId}/{document=**} {
      // Permite leitura e escrita apenas se o userId do documento for o mesmo do usu치rio autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Bloquear todo o resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
